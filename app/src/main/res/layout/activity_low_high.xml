<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LowHighGame">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Guessing Game (LOWER/HIGHER) HERE!"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/guessText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/message"
        android:inputType="number"
        android:text="Take a Guess!" />

    <Button
        android:id="@+id/checkGuess"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/guessText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Check Guess!" />

    <ImageButton
        android:id="@+id/backToGames"
        android:layout_width="136dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/arrowback" />


</RelativeLayout>